<div class="modal fade" id="popUpEditPerson">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- header -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Edit</h3>
            </div>

            <!-- body form -->
            <div class="modal-body" id="popUpEditPerson_body">

                @Html.Partial("Edit", Model)

            </div>
            <!-- submit button-->
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-md" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="popUpDetailsPerson">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- header -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Details</h3>
            </div>

            <!-- body form -->
            <div class="modal-body">

                @Html.Partial("Details", Model)

            </div>
            <!-- submit button-->
            <div class="modal-footer">

                <button type="button" class="btn btn-default btn-md" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary btn-md" data-dismiss="modal" data-toggle="modal" data-target="#popUpEditPerson">Edit</button>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="popUpDeletePerson">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- header -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3>Delete</h3>
            </div>

            <!-- body form -->
            <div class="modal-body">

                @Html.Partial("Delete", Model)

            </div>
            <!-- submit button-->
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-md" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
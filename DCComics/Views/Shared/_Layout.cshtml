<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>

    @Styles.Render("~/bundles/styles")
</head>
<body>    
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">

            <!-- Logo-->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mainNavBar">
                    <span class="icon-bar"></span> 
                    <span class="icon-bar"></span> 
                    <span class="icon-bar"></span> 
                </button>
                <a href="~//Home/Index" class="navbar-brand">DC COMICS</a>
            </div>

            <!--Menu Items-->
            <div class="collapse navbar-collapse" id="mainNavBar">
                <ul class="nav navbar-nav">
                    <li><a href="~//Person/Index">Person</a></li>
                    <li><a href="#">Super Heroes</a></li>
                    <li><a href="#">Super Villans</a></li>
                    <!-- drop down menu-->
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">DC Universe <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Planets</a></li>
                            <li><a href="#">Cities</a></li>
                            <li><a href="#">Factions</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        
    </div>
    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
